<!-- res/layout/table_row.xml -->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2,3,4">

    <TableRow
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/roll_no_text_view"
            android:layout_width="100dp"
            android:layout_column="1"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="130dp"
            android:layout_column="2"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/attendance_code_text_view"
            android:layout_width="70dp"
            android:layout_column="3"
            android:fontFamily="@font/lato"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/status_text_view1"
            android:layout_width="80dp"
            android:layout_column="3"
            android:fontFamily="@font/lato"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#21B300"
            android:visibility="visible"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/status_text_view2"
            android:layout_width="80dp"
            android:layout_column="3"
            android:fontFamily="@font/lato"
            android:textAlignment="center"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="#F80000"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/status_text_view3"
            android:layout_width="80dp"
            android:layout_column="3"
            android:fontFamily="@font/lato"
            android:textAlignment="center"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="#F4C300"
            android:textSize="14sp" />

    </TableRow>
</TableLayout>

