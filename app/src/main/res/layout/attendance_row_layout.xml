<!-- res/layout/table_row.xml -->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2,3,4,5,6">

    <TableRow
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/roll_no_text_view"
            android:layout_width="70dp"
            android:layout_column="1"
            android:fontFamily="@font/lato"
            android:paddingLeft="5dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="130dp"
            android:layout_column="2"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/attendance_code_text_view"
            android:layout_width="40dp"
            android:layout_column="3"
            android:fontFamily="@font/lato"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/status_text_view1"
            android:layout_width="60dp"
            android:layout_column="3"
            android:fontFamily="@font/lato"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPresent"
            android:visibility="visible"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/status_text_view2"
            android:layout_width="60dp"
            android:layout_column="3"
            android:fontFamily="@font/lato"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/colorAbsent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/status_text_view3"
            android:layout_width="60dp"
            android:layout_column="3"
            android:fontFamily="@font/lato"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/colorInvalid"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/removeBtn"
            android:clickable="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_column="5"
            android:src="@drawable/remove_btn" />


        <ImageView
            android:id="@+id/addBtn"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="6"
            android:src="@drawable/check_symbol" />

    </TableRow>
</TableLayout>

